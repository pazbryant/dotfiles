super + q
  bspc node -c

super + shift + {q,r}
	bspc {quit,wm -r}

super + shift + Escape
	pkill -USR1 -x sxhkd && dunstify "sxhkd" "Reloaded successfully"

super + space
    bspc query -N -n .local.window | xargs -I ID bspc node ID -g hidden

super + w
  bspc query -N -n focused.floating >/dev/null && \
      bspc node focused -t tiled || \
      bspc node focused -t floating

super + z
  bspc node -t '~fullscreen'

super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

super + {n,p}
	bspc node -f {next,prev}.local.!hidden.window

super + shift + {p,n}
	bspc desktop -f {prev,next}.local

super + Tab
	bspc desktop -f last

super + {bracketleft,braceleft,parenleft,percent,equal,ampersand,parenright}
  bspc desktop -f '^{1-7}'

super + shift {1-7}
  bspc node -d '^{1-7}'

# -------------- print ------------- #

Print
  maim --select | xclip -selection clipboard -t image/png && dunstify "Save selection to clipboard"

super + Print
  maim | xclip -selection clipboard -t image/png && dunstify "Save full to clipboard"

super + {s,S}
  ~/bin/sh/screenshots.sh {cropped,full}

# -------------- music player ------------- #

super + minus
  mpc volume -5 

super + plus
  mpc volume +5 

super + greater
  mpc next

super + less
  mpc prev

super + shift + BackSpace
  mpc toggle

# -------------- main keys ------------- #

super + u
  firefox-developer-edition

super + e
  pcmanfm

super + d
  rofi -modes "drun,window,run" -show drun

super + t
  st

super + o
  chromium 

super + a
  pavucontrol

# -------------- custom scripts ------------- #

super + F1
  ~/bin/sh/video.sh

super + F2
  ~/bin/sh/audio.sh

super + b
  ~/bin/sh/set_brightness.sh

super + shift + w
  ~/bin/sh/rofiwall.sh

super + d
  xmodmap ~/.Xmodmap; dunstify "Dvorak"

super + shift + d
  xmodmap ~/.XmodmapIntl; dunstify "Dvorak Intl"

super + shift + m
  bspc rule -a URxvt -o state=floating follow=on center=true  && urxvt -e fish -c "ncmpcpp"
