[user]
	name = Bryant Paz
	email = plbryant@hotmail.com
	username = plbryant
[init]
	defaultBranch = main
[core]
	editor = nvim
	whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
[pager]
  diff = delta
  log = delta
  reflog = delta
  show = delta
[diff]
	tool = vimdiff
[difftool]
	prompt = false
[delta]
	features = line-numbers decorations
	line-numbers = true
  syntax-theme = base16
  navigate = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
  require = true
[delta "decorations"]
  minus-style = "#CC342B"
  plus-style = "#198844"
  minus-emph-style = "#CC342B"
  minus-non-emph-style = "#CC342B"
  plus-emph-style = "#198844"
  plus-non-emph-style = "#198844"
  file-style = "#A36AC7" bold
  file-decoration-style = "#A36AC7"
  hunk-header-style = "#FBA922"
  hunk-header-decoration-style = "#FBA922"

[color]
  meta = "#A36AC7"
  frag = "#3971ED"
  old = "#CC342B"
  new = "#198844"
  whitespace = "#969896"
  added = "#198844"
  changed = "#FBA922"
  untracked = "#CC342B"
