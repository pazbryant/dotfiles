[user]
	name = Bryant Paz
	email = plbryant@hotmail.com
	username = plbryant
[init]
	defaultBranch = main
[core]
	editor = nvim
	whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
[pager]
  diff = delta
  log = delta
  reflog = delta
  show = delta
[diff]
	tool = vimdiff
[difftool]
	prompt = false
[delta]
	features = line-numbers decorations
	line-numbers = true
  syntax-theme = base16
  navigate = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
  require = true
[delta "decorations"]
  minus-style = "#ea4335"
  plus-style = "#34a853"
  minus-emph-style = "#ea4335"
  minus-non-emph-style = "#ea4335"
  plus-emph-style = "#34a853"
  plus-non-emph-style = "#34a853"
  file-style = "#b294bb" bold
  file-decoration-style = "#b294bb"
  hunk-header-style = "#fbbc05"
  hunk-header-decoration-style = "#fbbc05"

[color]
  meta = "#c4a7e7"
  frag = "#7aa7ce"
  old = "#ea4335"
  new = "#34a853"
  whitespace = "#6a6a6a"
  added = "#34a853"
  changed = "#fbbc05"
  untracked = "#ea4335"
