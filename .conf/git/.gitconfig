[user]
	name = Bryant Paz
	email = plbryant@hotmail.com
	username = plbryant
[init]
	defaultBranch = main
[core]
	editor = nvim
	whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
[pager]
  diff = delta
  log = delta
  reflog = delta
  show = delta
[diff]
	tool = vimdiff
[difftool]
	prompt = false
[delta]
	features = line-numbers decorations
	line-numbers = true
  syntax-theme = Dracula
  navigate = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
  require = true
[delta "decorations"]
  minus-style = "#ff5555"
  plus-style = "#50fa7b"
  minus-emph-style = "#ff5555"
  minus-non-emph-style = "#ff5555"
  plus-emph-style = "#50fa7b"
  plus-non-emph-style = "#50fa7b"
  file-style = "#bd93f9" bold
  file-decoration-style = "#bd93f9"
  hunk-header-style = "#f1fa8c"
  hunk-header-decoration-style = "#f1fa8c"

[color]
  meta = "#bd93f9"
  frag = "#8be9fd"
  old = "#ff5555"
  new = "#50fa7b"
  whitespace = "#6272a4"
  added = "#50fa7b"
  changed = "#f1fa8c"
  untracked = "#ff5555"
