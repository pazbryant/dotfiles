[user]
	name = Bryant Paz
	email = plbryant@hotmail.com
	username = plbryant
[init]
	defaultBranch = main
[core]
	editor = nvim
	whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
[pager]
  diff = delta
  log = delta
  reflog = delta
  show = delta
[diff]
	tool = vimdiff
[difftool]
	prompt = false
[delta]
	features = line-numbers decorations
	line-numbers = true
  syntax-theme = base16
  navigate = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
  require = true
[delta "decorations"]
  minus-style = "#fb4934"
  plus-style = "#b8bb26"
  minus-emph-style = "#fb4934"
  minus-non-emph-style = "#fb4934"
  plus-emph-style = "#b8bb26"
  plus-non-emph-style = "#b8bb26"
  file-style = "#83a598" bold
  file-decoration-style = "#83a598"
  hunk-header-style = "#fabd2f"
  hunk-header-decoration-style = "#fabd2f"

[color]
  meta = "#8f3f71"
  frag = "#8ec07c"
  old = "#fb4934"
  new = "#b8bb26"
  whitespace = "#665c54"
  added = "#b8bb26"
  changed = "#fabd2f"
  untracked = "#fb4934"
