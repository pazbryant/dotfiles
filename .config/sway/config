# ░█▀▀░█░█░█▀█░█░█
# ░▀▀█░█▄█░█▀█░░█░
# ░▀▀▀░▀░▀░▀░▀░░▀░


#----------------
#-- Variables: --
#----------------


    # font
    font pango: sans-serif Regular 8.5
    
    # Super key
    set $mod Mod4
    
    # Movements key
    set $left h
    set $down j
    set $up k
    set $right l
    
    # Floating modifier:
    floating_modifier $mod normal
    
    # Floating windows list:
    for_window [class="imv"] floating enable
    for_window [app_id="pavucontrol"] floating enable


#-------------------
#-- Sway session: --
#-------------------


    # Reload the configuration file
    bindsym $mod+Shift+c reload
    
    # Exit sway (logs you out of your Wayland session)
    bindsym $mod+Shift+e exec swaymsg exit


#--------------------
#-- Set wallpaper: --
#--------------------


    output * bg #002b36 solid_color
    #voutput * bg ~/Debstrap/sw.jpg fill


#--------------------------
#-- Input configuration: --
#--------------------------

input type:keyboard {
  repeat_delay 200
  repeat_rate 40
  # custom keyboard layout
  xkb_layout 'bryant-dvorak'
}


input "type:pointer" accel_profile flat


#-------------------
#-- Applications: --
#-------------------

    # Start a terminal
    bindsym $mod+t exec foot

    # Kill focused window
    bindsym $mod+q kill

    # Start your launcher
    bindsym $mod+d exec rofi -show drun -show-icons

    # Lanch web browser
    bindsym $mod+Return exec firefox -P Personal
    bindsym $mod+Shift+Return exec firefox -P Work

    # Launch file manager:
    bindsym $mod+e exec nemo

    # Toggle custom keyboard layouts
    bindsym $mod+space exec ~/bin/wm/switch_keyboard

    # Select and execute custom scripts
    bindsym $mod+s exec ~/bin/wm/select_and_execute

    # Save selected area in clipboard
    bindsym Print exec ~/bin/wm/take_screenshots -m select -s clip
    
    # Save selected area in screenshots dir
    bindsym $mod+Print exec ~/bin/wm/take_screenshots -m select -s save
    
    # Save full screen in clipboard
    bindsym Shift+Print exec ~/bin/wm/take_screenshots -m full -s clip

    # Save full screen in screenshots dir
    bindsym Ctrl+Print exec ~/bin/wm/take_screenshots -m full -s save
    
    
#
# Moving around:
#

    bindsym $mod+$left focus left
    bindsym $mod+$down focus down
    bindsym $mod+$up focus up
    bindsym $mod+$right focus right

    bindsym $mod+Shift+$left move left
    bindsym $mod+Shift+$down move down
    bindsym $mod+Shift+$up move up
    bindsym $mod+Shift+$right move right
#
# Workspaces:
#
    # Switch to workspace
    bindsym $mod+bracketleft workspace number 1
    bindsym $mod+braceleft workspace number 2
    bindsym $mod+parenleft workspace number 3
    bindsym $mod+percent workspace number 4
    bindsym $mod+equal workspace number 5
    bindsym $mod+ampersand workspace number 6
    bindsym $mod+parenright workspace number 7
    bindsym $mod+braceright workspace number 8
    bindsym $mod+bracketright workspace number 9
    bindsym $mod+exclam workspace number 10

    # Move focused container to workspace
    bindsym $mod+Shift+bracketleft move container to workspace number 1
    bindsym $mod+Shift+braceleft  move container to workspace number 2
    bindsym $mod+Shift+parenleft  move container to workspace number 3
    bindsym $mod+Shift+percent    move container to workspace number 4
    bindsym $mod+Shift+equal      move container to workspace number 5
    bindsym $mod+Shift+ampersand  move container to workspace number 6
    bindsym $mod+Shift+parenright move container to workspace number 7
    bindsym $mod+Shift+braceright move container to workspace number 8
    bindsym $mod+Shift+bracketright move container to workspace number 9
    bindsym $mod+Shift+exclam move container to workspace number 10
    # Note: workspaces can have any name you want, not just numbers.

    # Make the current focus fullscreen
    bindsym $mod+f fullscreen

    # Toggle the current focus between tiling and floating mode
    bindsym $mod+Shift+f floating toggle
#
# Resizing containers:
#
mode "resize" {
    # left will shrink the containers width
    # right will grow the containers width
    # up will shrink the containers height
    # down will grow the containers height
    bindsym $right resize shrink width 10px
    bindsym $up resize grow height 10px
    bindsym $down resize shrink height 10px
    bindsym $left resize grow width 10px

    # Return to default mode
    bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"
#
# Utilities:
#
    # Special keys to adjust volume via PulseAudio
    bindsym --locked XF86AudioLowerVolume exec ~/bin/wm/set_volume down
    bindsym --locked XF86AudioRaiseVolume exec ~/bin/wm/set_volume up
    # bindsym --locked XF86AudioMute exec ~/bin/wm/set_volume
    # bindsym --locked XF86AudioMicMute exec pactl set-source-mute \@DEFAULT_SOURCE@ toggle

#
# Status Bar:
#
# Read `man 5 sway-bar` for more information about this section.
bar {
    position bottom
    height 0
    gaps 0 0 0 0
    font sans-serif bold 8

    status_command while date +'%Y-%m-%d %X'; do sleep 1; done

    colors {
        statusline #ffffff
        background #323232
        inactive_workspace #32323200 #32323200 #5c5c5c
    }
}

# starting software
exec autotiling
exec pipiwere
exec pipiwere-pulse
exec mako
exec mpd
exec wireplumber
exec udiskie

include /etc/sway/config.d/*
